<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/colorOrange"
    android:orientation="vertical"
    tools:context="ch.ethz.ikg.gis.hungergames.MainActivity">

    <View
        android:id="@+id/placeholder1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/sponsorPending"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:text="Sponsor"
        android:textColor="@color/colorFontLight"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cashPending"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:text="Cash"
        android:textColor="@color/colorFontLight"
        android:textSize="24dp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/taskPending"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:text="Challenge"
        android:textColor="@color/colorFontLight"
        android:textSize="24dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/placeholder2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/placeholder5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/declineButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_button_decline"
            android:gravity="center"
            android:src="@drawable/ic_clear_white_48dp"
            android:textSize="12dp" />

        <View
            android:id="@+id/placeholder4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/acceptButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_button_accept"
            android:gravity="center"
            android:src="@drawable/ic_done_white_48dp"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <View
            android:id="@+id/placeholder6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:visibility="invisible" />

    </LinearLayout>

    <View
        android:id="@+id/placeholder3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible" />

</LinearLayout>