<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/colorBrand"
    android:orientation="vertical"
    tools:context="ch.ethz.ikg.gis.hungergames.MainActivity">

    <View
        android:id="@+id/placeholder1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/paricipantNumber"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.89"
        android:gravity="center"
        android:text="Participant Number"
        android:textColor="@color/colorFontLight"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/participantNumberContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:hint="Your participant number"
        android:inputType="numberSigned"
        android:textColor="@color/colorFontLight"
        android:textColorHint="@color/colorFontLight"
        android:textCursorDrawable="@color/colorFontLight"
        android:textSize="18dp" />

    <View
        android:id="@+id/placeholder2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <View
            android:id="@+id/placeholder3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:visibility="invisible" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:gravity="center"
            android:text="Start"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/placeholder4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>